<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefWidth="450.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mmds.crud_usuarios_java.controller.UserFormController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label fx:id="titleLabel" text="Adicionar Usuário">
        <font>
            <Font name="System Bold" size="18.0" />
        </font>
    </Label>
   <AmbientLight color="CHARTREUSE" lightOn="true" />
    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" VBox.vgrow="ALWAYS">
        <content>
            <GridPane hgap="10.0" prefHeight="317.0" prefWidth="407.0" vgap="15.0">
                <padding>
                    <Insets right="10.0" />
                </padding>
                <Label text="Nome:" GridPane.rowIndex="0" />
                <TextField fx:id="nomeField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Label text="Sobrenome:" GridPane.rowIndex="1" />
                <TextField fx:id="sobrenomeField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label text="Email:" GridPane.rowIndex="2" />
                <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Label text="Login:" GridPane.rowIndex="3" />
                <TextField fx:id="loginField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                <Label text="Data de Nascimento:" GridPane.rowIndex="4" />
                <DatePicker fx:id="dataNascimentoPicker" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                <Label text="Telefone:" GridPane.rowIndex="5" />
                <TextField fx:id="telefoneField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                <Label text="Sexo:" GridPane.rowIndex="6" />
                <ChoiceBox fx:id="sexoChoiceBox" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                <Label text="Endereço:" GridPane.rowIndex="7" />
                <TextField fx:id="enderecoField" GridPane.columnIndex="1" GridPane.rowIndex="7" />
            <columnConstraints>
               <ColumnConstraints />
               <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
            </rowConstraints>
            </GridPane>
        </content>
    </ScrollPane>
    <Button onAction="#handleSalvar" text="Salvar" textAlignment="CENTER">
      <font>
         <Font name="Berlin Sans FB" size="16.0" />
      </font></Button>
</VBox>
